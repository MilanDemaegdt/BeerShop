@model IEnumerable<BeerShop.ViewModels.BeerVM>

@{
    ViewData["Title"] = "GetBeerByBrewer";
}

<h1>GetBeerByBrewer</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetBeerByBrewer">

            <div class="form-group">
                <label for="brouwerId" class="control-label"></label>
                <select name="brouwerId" id="brouwerId"
                        asp-items="@ViewBag.lstBrouwer">
                    <option>Please select</option>
                </select>

            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@if (Model != null)
{


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Naam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BrouwerNaam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoortNaam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Alcohol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Naam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrouwerNaam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoortNaam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alcohol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
